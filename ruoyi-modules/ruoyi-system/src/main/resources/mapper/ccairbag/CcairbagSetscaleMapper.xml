<mapper namespace="com.ruoyi.system.mapper.CcairbagSetscaleMapper">
    
    <resultMap type="CcairbagSetscale" id="CcairbagSetscaleResult">
        <result property="id"    column="id"    />
        <result property="scale"    column="scale"    />
        <result property="dealScale"    column="deal_scale"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="deleted"    column="deleted"    />
    </resultMap>

    <sql id="selectCcairbagSetscaleVo">
        select id, scale, deal_scale, create_by, create_time, update_by, update_time, deleted from ccairbag_setscale
    </sql>

    <select id="selectCcairbagSetscaleList" parameterType="CcairbagSetscale" resultMap="CcairbagSetscaleResult">
        <include refid="selectCcairbagSetscaleVo"/>
        <where>
            deleted = 0
            <if test="scale != null "> and scale = #{scale}</if>
            <if test="dealScale != null "> and deal_scale = #{dealScale}</if>
            <if test="deleted != null "> and deleted = #{deleted}</if>
        </where>
    </select>
    
    <select id="selectCcairbagSetscaleById" parameterType="Long" resultMap="CcairbagSetscaleResult">
        <include refid="selectCcairbagSetscaleVo"/>
        where deleted = 0 and id = #{id}
    </select>

    <insert id="insertCcairbagSetscale" parameterType="CcairbagSetscale">
        insert into ccairbag_setscale
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="scale != null">scale,</if>
            <if test="dealScale != null">deal_scale,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="deleted != null">deleted,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="scale != null">#{scale},</if>
            <if test="dealScale != null">#{dealScale},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="deleted != null">#{deleted},</if>
         </trim>
    </insert>

    <update id="updateCcairbagSetscale" parameterType="CcairbagSetscale">
        update ccairbag_setscale
        <trim prefix="SET" suffixOverrides=",">
            <if test="scale != null">scale = #{scale},</if>
            <if test="dealScale != null">deal_scale = #{dealScale},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="deleted != null">deleted = #{deleted},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCcairbagSetscaleById" parameterType="Long">
        update ccairbag_setscale set deleted = 1 where id = #{id}
    </delete>

    <delete id="deleteCcairbagSetscaleByIds" parameterType="String">
        update ccairbag_setscale set deleted = 1 where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>

    </delete>
</mapper>