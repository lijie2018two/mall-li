<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ccairbag.api.mapper.CitiesMapper">
    
    <resultMap type="Cities" id="CitiesResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="stateId"    column="state_id"    />
        <result property="stateCode"    column="state_code"    />
        <result property="stateName"    column="state_name"    />
        <result property="countryId"    column="country_id"    />
        <result property="countryCode"    column="country_code"    />
        <result property="countryName"    column="country_name"    />
        <result property="latitude"    column="latitude"    />
        <result property="longitude"    column="longitude"    />
        <result property="wikiDataId"    column="wikiDataId"    />
    </resultMap>

    <sql id="selectCitiesVo">
        select id, name, state_id, state_code, state_name, country_id, country_code, country_name, latitude, longitude, wikiDataId from cities
    </sql>

    <select id="selectCitiesList" parameterType="Cities" resultMap="CitiesResult">
        <include refid="selectCitiesVo"/>
        <where>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="stateId != null  and stateId != ''"> and state_id = #{stateId}</if>
            <if test="stateCode != null  and stateCode != ''"> and state_code = #{stateCode}</if>
            <if test="stateName != null  and stateName != ''"> and state_name like concat('%', #{stateName}, '%')</if>
            <if test="countryId != null  and countryId != ''"> and country_id = #{countryId}</if>
            <if test="countryCode != null  and countryCode != ''"> and country_code = #{countryCode}</if>
            <if test="countryName != null  and countryName != ''"> and country_name like concat('%', #{countryName}, '%')</if>
            <if test="latitude != null  and latitude != ''"> and latitude = #{latitude}</if>
            <if test="longitude != null  and longitude != ''"> and longitude = #{longitude}</if>
            <if test="wikiDataId != null  and wikiDataId != ''"> and wikiDataId = #{wikiDataId}</if>
        </where>
    </select>
    
    <select id="selectCitiesById" parameterType="String" resultMap="CitiesResult">
        <include refid="selectCitiesVo"/>
        where deleted = 0 and id = #{id}
    </select>

    <insert id="insertCities" parameterType="Cities">
        insert into cities
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="stateId != null">state_id,</if>
            <if test="stateCode != null">state_code,</if>
            <if test="stateName != null">state_name,</if>
            <if test="countryId != null">country_id,</if>
            <if test="countryCode != null">country_code,</if>
            <if test="countryName != null">country_name,</if>
            <if test="latitude != null">latitude,</if>
            <if test="longitude != null">longitude,</if>
            <if test="wikiDataId != null">wikiDataId,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="stateId != null">#{stateId},</if>
            <if test="stateCode != null">#{stateCode},</if>
            <if test="stateName != null">#{stateName},</if>
            <if test="countryId != null">#{countryId},</if>
            <if test="countryCode != null">#{countryCode},</if>
            <if test="countryName != null">#{countryName},</if>
            <if test="latitude != null">#{latitude},</if>
            <if test="longitude != null">#{longitude},</if>
            <if test="wikiDataId != null">#{wikiDataId},</if>
         </trim>
    </insert>

    <update id="updateCities" parameterType="Cities">
        update cities
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="stateId != null">state_id = #{stateId},</if>
            <if test="stateCode != null">state_code = #{stateCode},</if>
            <if test="stateName != null">state_name = #{stateName},</if>
            <if test="countryId != null">country_id = #{countryId},</if>
            <if test="countryCode != null">country_code = #{countryCode},</if>
            <if test="countryName != null">country_name = #{countryName},</if>
            <if test="latitude != null">latitude = #{latitude},</if>
            <if test="longitude != null">longitude = #{longitude},</if>
            <if test="wikiDataId != null">wikiDataId = #{wikiDataId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCitiesById" parameterType="String">
        update cities set deleted = 1 where id = #{id}
    </delete>

    <delete id="deleteCitiesByIds" parameterType="String">
        update cities set deleted = 1 where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>

    </delete>
</mapper>