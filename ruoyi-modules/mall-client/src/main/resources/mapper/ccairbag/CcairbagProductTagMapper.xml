    <sql id="selectCcairbagProductTagVo">
        select id, title, shop_id, is_default, prod_count, style, seq, deleted, created_by, created_time, updated_by, updated_time from ccairbag_product_tag
    </sql>

    <select id="selectCcairbagProductTagList" parameterType="CcairbagProductTag" resultMap="CcairbagProductTagResult">
        <include refid="selectCcairbagProductTagVo"/>
        <where>
            deleted = 0
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="shopId != null "> and shop_id = #{shopId}</if>
            <if test="isDefault != null "> and is_default = #{isDefault}</if>
            <if test="prodCount != null "> and prod_count = #{prodCount}</if>
            <if test="style != null "> and style = #{style}</if>
            <if test="seq != null "> and seq = #{seq}</if>
            <if test="deleted != null "> and deleted = #{deleted}</if>
            <if test="createdBy != null  and createdBy != ''"> and created_by = #{createdBy}</if>
            <if test="createdTime != null "> and created_time = #{createdTime}</if>
            <if test="updatedBy != null  and updatedBy != ''"> and updated_by = #{updatedBy}</if>
            <if test="updatedTime != null "> and updated_time = #{updatedTime}</if>
        </where>
    </select>
    
    <select id="selectCcairbagProductTagById" parameterType="Long" resultMap="CcairbagProductTagResult">
        <include refid="selectCcairbagProductTagVo"/>
        where deleted = 0 and id = #{id}
    </select>

    <insert id="insertCcairbagProductTag" parameterType="CcairbagProductTag" useGeneratedKeys="true" keyProperty="id">
        insert into ccairbag_product_tag
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">title,</if>
            <if test="shopId != null">shop_id,</if>
            <if test="isDefault != null">is_default,</if>
            <if test="prodCount != null">prod_count,</if>
            <if test="style != null">style,</if>
            <if test="seq != null">seq,</if>
            <if test="deleted != null">deleted,</if>
            <if test="createdBy != null">created_by,</if>
            <if test="createdTime != null">created_time,</if>
            <if test="updatedBy != null">updated_by,</if>
            <if test="updatedTime != null">updated_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null">#{title},</if>
            <if test="shopId != null">#{shopId},</if>
            <if test="isDefault != null">#{isDefault},</if>
            <if test="prodCount != null">#{prodCount},</if>
            <if test="style != null">#{style},</if>
