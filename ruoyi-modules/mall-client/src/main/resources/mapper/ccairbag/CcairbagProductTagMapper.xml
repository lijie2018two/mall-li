    <delete id="deleteCcairbagProductTagById" parameterType="Long">
        update ccairbag_product_tag set deleted = 1 where id = #{id}
    </delete>

    <delete id="deleteCcairbagProductTagByIds" parameterType="String">
        update ccairbag_product_tag set deleted = 1 where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>

    </delete>
</mapper>