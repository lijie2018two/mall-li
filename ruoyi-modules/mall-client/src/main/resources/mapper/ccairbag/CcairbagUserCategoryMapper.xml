<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ccairbag.api.mapper.CcairbagUserCategoryMapper">
    
    <resultMap type="CcairbagUserCategory" id="CcairbagUserCategoryResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="categoryId"    column="category_id"    />
        <result property="accessTime"    column="access_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectCcairbagUserCategoryVo">
        select id, user_id, category_id, access_time, create_by, create_time, update_by, update_time from ccairbag_user_category
    </sql>

    <select id="selectCcairbagUserCategoryList" parameterType="CcairbagUserCategory" resultMap="CcairbagUserCategoryResult">
        <include refid="selectCcairbagUserCategoryVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="accessTime != null "> and access_time = #{accessTime}</if>
        </where>
    </select>


    <select id="countByUserId" parameterType="Long" resultType="Integer">
        SELECT COUNT(1) FROM ccairbag_user_category
        WHERE user_id = #{userId}
    </select>


    <select id="findRecentByUserId" parameterType="Long" resultMap="CcairbagUserCategoryResult">
        SELECT * FROM ccairbag_user_category
        WHERE user_id = #{userId}
    </select>







    <delete id="deleteOldestRecords" parameterType="java.util.List">
        DELETE FROM ccairbag_user_category
        WHERE id IN (
        <foreach collection="ids" item="id" separator=",">
            #{id}
        </foreach>
        )
    </delete>


    <select id="findOldestRecordIds"  resultType="Long">
        SELECT id FROM ccairbag_user_category
        WHERE user_id = #{userId}
        ORDER BY access_time asc
            LIMIT #{count}
    </select>


    
    <select id="selectCcairbagUserCategoryById" parameterType="Long" resultMap="CcairbagUserCategoryResult">
        <include refid="selectCcairbagUserCategoryVo"/>
        where deleted = 0 and id = #{id}
    </select>

    <insert id="insertCcairbagUserCategory" parameterType="CcairbagUserCategory" useGeneratedKeys="true" keyProperty="id">
        insert into ccairbag_user_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="accessTime != null">access_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="accessTime != null">#{accessTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateCcairbagUserCategory" parameterType="CcairbagUserCategory">
        update ccairbag_user_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="accessTime != null">access_time = #{accessTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>


</mapper>