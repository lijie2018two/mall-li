<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ccairbag.api.mapper.CcairbagProductParameterValuesMapper">
    
    <resultMap type="CcairbagProductParameterValues" id="CcairbagProductParameterValuesResult">
        <result property="valueId"    column="value_id"    />
        <result property="productId"    column="product_id"    />
        <result property="parameterId"    column="parameter_id"    />
        <result property="value"    column="value"    />
        <result property="deleted"    column="deleted"    />
        <result property="updateTime"    column="update_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="createBy"    column="create_by"    />
    </resultMap>

    <sql id="selectCcairbagProductParameterValuesVo">
        select value_id, product_id, parameter_id, value, deleted, update_time, update_by, create_time, create_by from ccairbag_product_parameter_values
    </sql>

    <select id="selectCcairbagProductParameterValuesList" parameterType="CcairbagProductParameterValues" resultMap="CcairbagProductParameterValuesResult">
        <include refid="selectCcairbagProductParameterValuesVo"/>
        <where>
            deleted = 0
            <if test="productId != null "> and product_id = #{productId}</if>
            <if test="parameterId != null "> and parameter_id = #{parameterId}</if>
            <if test="value != null  and value != ''"> and value = #{value}</if>
            <if test="deleted != null "> and deleted = #{deleted}</if>
        </where>
    </select>



    <select id="getParameterValuesByProductId" parameterType="Long" resultMap="CcairbagProductParameterValuesResult">
        <include refid="selectCcairbagProductParameterValuesVo"/>
        where deleted = 0 and product_id = #{productId}
    </select>

    <select id="selectCcairbagProductParameterValuesByValueId" parameterType="Long" resultMap="CcairbagProductParameterValuesResult">
        <include refid="selectCcairbagProductParameterValuesVo"/>
        where deleted = 0 and value_id = #{valueId}
    </select>

    <insert id="insertCcairbagProductParameterValues" parameterType="CcairbagProductParameterValues" useGeneratedKeys="true" keyProperty="valueId">
        insert into ccairbag_product_parameter_values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="productId != null">product_id,</if>
            <if test="parameterId != null">parameter_id,</if>
            <if test="value != null">value,</if>
            <if test="deleted != null">deleted,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="createBy != null">create_by,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="productId != null">#{productId},</if>
            <if test="parameterId != null">#{parameterId},</if>
            <if test="value != null">#{value},</if>
            <if test="deleted != null">#{deleted},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="createBy != null">#{createBy},</if>
         </trim>
    </insert>

    <update id="updateCcairbagProductParameterValues" parameterType="CcairbagProductParameterValues">
        update ccairbag_product_parameter_values
        <trim prefix="SET" suffixOverrides=",">
            <if test="productId != null">product_id = #{productId},</if>
            <if test="parameterId != null">parameter_id = #{parameterId},</if>
            <if test="value != null">value = #{value},</if>
            <if test="deleted != null">deleted = #{deleted},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
        </trim>
        where value_id = #{valueId}
    </update>

    <delete id="deleteCcairbagProductParameterValuesByValueId" parameterType="Long">
        update ccairbag_product_parameter_values set deleted = 1 where value_id = #{valueId}
    </delete>

    <delete id="deleteCcairbagProductParameterValuesByValueIds" parameterType="String">
        update ccairbag_product_parameter_values set deleted = 1 where value_id in
        <foreach item="valueId" collection="array" open="(" separator="," close=")">
            #{valueId}
        </foreach>

    </delete>
</mapper>